@model ApplicationCore.Models.CastDetailsResponseModel
<div class="container">
<div>
<h1>
@Model.Name
</h1>
</div>
<div>
<img src="@Model.ProfilePath"/>
</div>

@if(Model.Gender.Equals("1"))
{
    <div>Female</div>
}
else
{
    <div>Male</div>  
}

<div>
 <a href=@Model.TmdbUrl>The Movie Database Profile</a> 

</div>
<div class="container-fluid">
<div class ="row">
    @foreach(var movie in Model.MovieTitle)
{
    <div class="col-6 col-xl-2 cl-sm-4 col-lg-3">
    <partial name="_MovieCard" model="movie"/>
    </div>
}

</div>
</div>


</div>